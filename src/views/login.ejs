<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
            <h1 class="text-center">Comece a usar a Agenda</h1>
            <p class="text-center lead">Faça login ou Crie sua conta</p>

            <%- include('includes/messeges'); %>

            <div class="row">

                <div class="col-lg">
                    <h4>Cadastre-se</h4>
                    
                    <form class="form-register" action="/accounts/register" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label for="email">Email</label>
                          <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Digite seu email">
                          <div class="flash-msg-email"></div>
                          <small id="emailHelp" class="form-text text-muted">Nunca compartilhamos seu email com ninguém.</small>
                        </div>
                        <div class="form-group">
                          <label for="password">Senha</label>
                          <input type="password" class="form-control" name="password" id="password" placeholder="Senha">
                          <div class="flash-msg-password"></div>
                        </div>
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                      </form>
                </div>


                <div class="col-lg">
                    <h4>Login</h4>
                    <form class="form-login" action="/accounts/login" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label for="email">Email</label>
                          <input type="email" class="form-control" name="email" id="email" placeholder="Digite o email cadastrado">
                          <div class="flash-msg-email"></div>
                        </div>
                        <div class="form-group">
                          <label for="password">Senha</label>
                          <input type="password" class="form-control" name="password" id="password" placeholder="Senha">
                          <div class="flash-msg-password"></div>
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                      </form>
                </div>

            </div>
        </div>

    </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>
