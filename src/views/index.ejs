<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-5">
                    <h1 class="text-center">Agenda</h1>
                    <p class="text-center lead">Seus contatos est√£o listados abaixo</p>

                    <%- include('includes/messeges') %>

                    <% if(contacts.length > 0 ) { %>

                        <div class="responsive-table">
                            <table class="table my-3">
                            <% contacts.forEach(contact => { %> 
                              <tr> 
                                <td><%= contact.name %></td>
                                <td><%= contact.lastName %></td>
                                <td><%= contact.email %></td>
                                <td><%= contact.number %></td>

                                <td><a href="/contato/index/<%= contact._id %>">Edit</a></td>
                                <td><a class="text-danger" href="/contato/delete/<%= contact._id %>">Delete</a></td>
                              </tr>    

                           <% }); %>    
                            </table>
                        </div>
                    <% } else { %>
                        <p class="text-center lead">Ops, nobody here. Lets know some people :) </p>
                    <% } %>

                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer') %>